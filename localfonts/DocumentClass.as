package {	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.text.Font;	import flash.text.FontType;	import flash.text.FontStyle;	import flash.external.ExternalInterface;	public class DocumentClass extends MovieClip {		public function DocumentClass() {			// ExternalInterface.call('test');			ExternalInterface.call('localfonts', getDeviceFonts());		}		private function getDeviceFonts():Array {			// http://as3.blue112.eu/flash/text/Font.html#enumerateFonts%28%29			var embeddedAndDeviceFonts:Array=Font.enumerateFonts(true);			var deviceFontNames:Array=[];			for each (var font:Font in embeddedAndDeviceFonts) {				if (font.fontType==FontType.EMBEDDED||font.fontStyle!=FontStyle.REGULAR) {					continue;				}				// deviceFontNames.push({name:font.fontName,style:font.fontStyle,type:font.fontType});				deviceFontNames.push(font.fontName);			}			deviceFontNames.sort();			return deviceFontNames;		}	}}